{
  "compilerOptions": {
    "module": "node18",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "typings/",
    "esModuleInterop": true,
    "outDir": "lib/",
    "rootDir": "src/",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "tsBuildInfoFile": "typings/tsconfig.tsbuildinfo",
    "noErrorTruncation": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/"]
}
